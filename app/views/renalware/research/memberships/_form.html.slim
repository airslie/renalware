= simple_form_for(membership,
                  url: url,
                  as: :research_study_membership,
                  html: { autocomplete: "off" },
                  wrapper: :horizontal_form) do |f|

  = render "renalware/shared/errors", model: membership
  br
  - if membership.persisted?
    h5= membership.user
  - else
     = f.association :user,
        as: :user_picker,
        wrapper: :horizontal_medium,
        collection: Renalware::System::UsersPresenter.new.list_for_dropdown( \
          user_to_promote_to_top: current_user \
        )

  = f.association :hospital_centre,
        collection: Renalware::Hospitals::Centre.ordered,
        label_method: :to_s,
        wrapper: :horizontal_medium

  = save_or_cancel(form: f, back_path: research_study_memberships_path(membership.study))
